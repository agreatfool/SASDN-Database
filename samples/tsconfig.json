{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "sourceMap": false,
      "rootDir": "src",
      "outDir": "build",
      "allowJs": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*.ts",
      "typings/**/*.d.ts"
    ],
    "exclude": [
      "src/index.d.ts",
      "node_modules"
    ]
  }